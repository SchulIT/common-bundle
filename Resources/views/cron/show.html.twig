{% extends ["main.html.twig", "@Common/main.html.twig"] %}

{% block title %}{{ 'cron.results.label'|trans }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ job.command }}
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover card-table">
                <colgroup>
                    <col>
                    <col class="column-sm">
                    <col class="column-sm">
                </colgroup>

                <thead>
                <tr>
                    <th>{{ 'cron.results.date'|trans }}</th>
                    <th>{{ 'cron.results.result'|trans }}</th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                {% for result in results %}
                    <tr>
                        <td>{{ result.createdAt|format_datetime }}</td>
                        <td>{{ result.statusCode }}</td>
                        <td>
                            <a href="{{ path('show_cronresult', { id: result.id, job: job.id }) }}" class="btn btn-primary btn-sm" title="{{ 'cron.results.show.label'|trans }}">
                                <i class="fa fa-terminal"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}