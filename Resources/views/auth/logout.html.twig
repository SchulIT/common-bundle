{% extends ["simple/main.html.twig", "@Common/simple/main.html.twig"] %}

{% block title %}{{ 'logout.success'|trans }}{% endblock %}

{% block content %}
    <div class="text-center">
        <i class="fas fa-sign-out-alt fa-3x d-block text-secondary"></i>
        <h4>{{ 'logout.success'|trans }}</h4>

        <p>{{ 'logout.info'|trans }}</p>
    </div>

    <div class="container-fluid px-0">
        <div class="row mb-3">
            <div class="col-md-6">
                <a href="/" class="btn btn-primary btn-block" type="submit">{{ 'logout.login'|trans }}</a>
            </div>

            <div class="col-md-6">
                <a href="{{ logout_url }}" class="btn btn-secondary btn-block" role="button">{{ 'logout.logout'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}